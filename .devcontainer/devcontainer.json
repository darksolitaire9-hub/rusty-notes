{
  "name": "Rusty Notes",
  "image": "mcr.microsoft.com/devcontainers/rust:1-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.watcherExclude": {
          "**/target/**": true,
          "**/node_modules/**": true
        }
      },
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates",
        "svelte.svelte-vscode",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "containerEnv": {
    "RUST_BACKTRACE": "1",
    "RUST_LOG": "info",
    "NODE_ENV": "development"
  },
  "forwardPorts": [5173],
  "remoteUser": "vscode",
  // 1. Install system libs (as root)
  // 2. Install pnpm
  // 3. Install project deps
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libwebkit2gtk-4.1-dev libappindicator3-dev librsvg2-dev libssl-dev && npm install -g pnpm && pnpm install"
}
