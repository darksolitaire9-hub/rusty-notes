{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window with minimal fs access",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename"
  ]
}
