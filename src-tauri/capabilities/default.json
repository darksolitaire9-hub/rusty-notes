{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window with minimal fs access",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:allow-save",
    "dialog:allow-open",

    "fs:allow-write-text-file",
    "fs:allow-read-text-file",

    {
      "identifier": "fs:scope",
      "allow": [
        "**/*"
      ]
    }
  ]
}
